<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_box">
        <item name="text_color_des">@color/color_grey_700</item>
        <item name="text_color_content">@color/color_grey_500</item>
        <item name="text_size">@dimen/text_size_m</item>
        <item name="text_separator">ï¼š</item>
        <item name="android:padding">@dimen/dp_10_p</item>
        <item name="android:layout_width">match_parent</item>
